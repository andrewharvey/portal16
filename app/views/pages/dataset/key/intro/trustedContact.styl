.gb-badge {
    padding 3px 10px
    border-radius 3px
}
.gb-badge--red {
    @extends .gb-badge
    background tomato
    color white
}
.gb-badge--green {
    @extends .gb-badge
    background $navBar_background_color
    color white
}
.gb-badge--yellow {
    @extends .gb-badge
    background $orangePeel
    color white
}

.trusted-contact {
    .c-error-badge {
        @extends .gb-badge--red
    }
}

.processSummary {
    width 120px
    max-width 100%
    height 120px
    margin auto
    >span {
        display inline-block
        width 20%
        height 20%
        border 2px solid white
        float left
        background tomato
    }
    .processSummary__NORMAL {
        background $navBar_background_color
    }
    .processSummary__NOT_MODIFIED{
        background lighten($navBar_background_color, 10)
    }
    .processSummary__EMPTY {
        background #eee
    }
}

.rtl {
    .processSummary {
        >span {
            float right
        }
    }
}