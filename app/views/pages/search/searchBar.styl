.search-bar {
    background white
    position relative
    width 100%
    z-index 10
    height vrBlock(3)
    //padding 0
    > form {
        vertically-align()
    }
    &__term {
        //margin-top vrBlock(0.5)
        display inline-block
        position relative
        width 100%
        > input {
            height vrBlock(1.5)
            background transparent //$lightBackground
            padding vrBlock(0.25) 20px
            border none //1px solid $stripeBorderColor
            outline none
            width 100%
            box-sizing border-box
            padding-right vrBlock(2.5)
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            font-size 14px
            line-height vrBlock(1)
            &:focus {
                outline none
            }
        }
    }
    &__search, &__clear, button {
        display block
        height vrBlock(1.5)
        width vrBlock(1.5)
        text-align center
        line-height vrBlock(1.5)
        position absolute
        right 0
        top 0px
        font-size 20px
        color inherit
        border none
    }
    &__search, &__search:hover {
        //background $actionColor
        //color white
        text-decoration none
        right vrBlock(1)
    }
    &__clear {
        right vrBlock(1.5)
    }
    &__qfield {
        margin-right 25px
        margin-top 10px
    }
    &__has-qfield {
        height vrBlock(4)
    }
}

.search-bar--home {
    @extend .search-bar
    padding 0
    &__term {
        > input {
            height vrBlock(2)
            padding vrBlock(0.5) 15px
            padding-right vrBlock(4)
            border 1px solid rgba(255, 255, 255, 0.5)
            background none
            font-size 16px
        }
    }
    &__search, &__clear, button {
        height vrBlock(2)
        width vrBlock(2)
        line-height vrBlock(2)
        right 0
    }
    &__search, &__search:hover {
        background $actionColor
        right 0
        color white
    }
    &__clear {
        right vrBlock(2)
    }
}