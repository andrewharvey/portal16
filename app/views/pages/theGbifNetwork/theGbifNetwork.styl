.tabs--emphasized {
    .tab>a {
        font-size 14px
    }
}

.region-selector-fixed {
    position fixed
    top 50px
    width 100%
    background-color $white
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.2)
    z-index 100
    text-align center
}
.selected-fixed-padding {
    margin-top 45px
}

.region-selector-select {
    margin-bottom vrBlock(1)
    select {
        border 1px solid $gray10
        outline none
        padding 3px
        background-color $paper
        width 120px
    }
}
.region-selector-tabs {
    display none
}
+isAbove($tablet) {

    .region-selector-tabs {
        display block
    }
}


.main-counts {
    min-height 160px
}

.update-region {
    //min-height 410px
    padding-top vrBlock(1)
}
+isAbove($tablet) {
    .update-region {
        //min-height 410px
        padding-top 0
    }
}

.entity-counts {
    vertical-align middle
    text-align left
    .entity-count {
        display inline-block
        vertical-align middle
        margin-left vrBlock(1)

        > div {
            display inline-block
        }
        .count-number {
            font-size 2em
            font-weight lighter
        }
        .count-label {
            font-size 1.1em
            font-weight lighter
            line-height 1.2em
            text-transform capitalize
            text-align left
        }
    }
}

+isAbove($mobile){
    .entity-counts {
        margin vrBlock(0.5) auto
        text-align center
        .entity-count {
            text-align center
            .count-number {
                font-size 2.5em
            }
            .count-label {
                font-size 1.2
            }
        }
    }
}

+isAbove($tablet){
    .entity-counts {
        text-align center
        .entity-count {
            .count-number {
                font-size 4em
            }
            .count-label {
                font-size 1.6em
                padding-left 3px
            }
            .medium-long-label {
                max-width 170px
            }
            .extra-long-label {
                max-width 180px
            }
        }
    }
}

.participant-list__columned {
    header {
        margin vrBlock(2) auto vrBlock(1)
        max-width 350px
        border-bottom 1px solid $gray
    }

    h3 {
        margin vrBlock(1) auto
        text-transform uppercase
    }

    ol {
        margin 0
        padding 0 vrBlock(1)
        li {
            margin-left 15px
            list-style-type decimal
            text-align left
            margin-bottom 5px
        }
    }

    footer {
        margin vrBlock(1) auto vrBlock(2)
        content "&nbsp;"
        width 200px
        border-bottom 1px solid $gray
    }
}

+isAbove($tablet) {
    .participant-list__columned {
        ol {
            margin vrBlock(2) auto
            column-count 2
            column-gap 30px
        }
    }
}
+isAbove($laptop) {
    .participant-list__columned {
        ol {
            margin vrBlock(2) auto
            column-count 4
            column-gap 30px
        }
    }
}

.voting_participant {
    color $votingParticipant
}

.associate_country_participant {
    color $associateCountryParticipant
}
.data-publisher {
    color $discreetInk
}
.count-literature {
    color $orange3
}

.chart-literature {
    position relative
    padding-bottom 40%
    max-width 600px
    margin 0 auto
    literature-bar-chart-yearly {
        margin-top vrBlock(1)
    }
    .bar {
        fill $orange3
    }

    .bar:hover {
        fill $orange1
    }

    .axis {
        font 12px sans-serif
    }

    .axis path,
    .axis line {
        fill none
        stroke #000
        shape-rendering crispEdges
    }

    .text {
        font-family sans-serif
        font-size 14px
        fill $blueTintedBlack
    }

    .chart-title {
        font-family sans-serif
        font-size 14px
        fill $blueTintedBlack
    }

    .axis-text {
        font-family sans-serif
        font-size 12px
        fill $blueTintedBlack
    }

}
+isAbove($tablet) {
    .chart-literature {
        padding-bottom 33%
    }
}
+isAbove($laptop) {
    .chart-literature {
        padding-bottom 25%
    }
}
+isAbove($desktop) {
    .chart-literature {
        padding-bottom 22%
    }
}

.map-background {
    // This has to be filled or the background won't accept clicking.
    fill $lightBackground
}

.map-shadow {
    fill $white
}

.svg-map-container {
    position relative
}

.svg-container {
    position relative
    padding-bottom 49%
    overflow hidden
}

.svg-content {
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    z-index 50
}

.boundary {
    stroke #fff
    stroke-width 0.3px
}

.active-polygon {
    stroke #fff
    stroke-width 1px
}


.netWorkMapLegend { text-align: left; line-height: 18px; color: #555; } .legend i { width: 18px; height: 18px; float: left; margin-right: 8px; opacity: 0.7; }

#theNetworkMap {
    background-image linear-gradient(to bottom, #CFCFCF, #a8a6a6)
}

.participant-details {
    position: absolute;
    right: 0px;
    top: 0px;
    z-index 2;
}

+isAbove($mobile) {
    .participant-details {
        position: absolute;
        right: 30px;
        top: 30px;
        z-index 2;
    }
}

.participant-details-list {
    margin-left: -38px;
}

.theGbifNetWork {
    &__map {
        position relative
        z-index 20
        max-height "calc(100vh - 40px - %s)" % $navBar_height
    }

    &__legend {
            
            left: 8px;
            bottom: 10px;
            overflow: hidden;
            width: 230px;
            padding: 6px;
            max-width: 100%;
            background: #fff;
            box-shadow: 0 1px 3px rgba(0,0,0,.3);
          div.info-label {
            margin-bottom: 6px;
          }
         i {
            width: 18px;
            height: 18px;
            float: left;
            margin-right: 8px;
            opacity: .7;
        }
        +isAbove($mobile){
            position: absolute;
        }
        +isBelow($mobile){
            margin-bottom: 10px;
        }
    }

    &__badges {
         color: #fff;
        -webkit-transition: box-shadow .2s ease,background .2s ease;
         transition: box-shadow .2s ease,background .2s ease;
         box-shadow: 0 2px 2px 0 rgba(0,0,0,.16);
         border: none;
         font-weight: 400;
         font-size: 12px;
         text-transform: uppercase;
         background: #71b171;
         text-align: center;
         padding: 3px 10px;
         display: inline-block;
         text-decoration: none;
         margin-bottom 10px;
    }
}
