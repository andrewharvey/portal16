{% extends "../sharable.nunjucks" %}

{% block page %}
    <div>
        <article class="wrapper-horizontal-stripes white-background">
            <div class="horizontal-stripe article-header white-background">
                <div class="container--desktop">
                    <div class="row">
                        <header class="col-xs-12 text-center">
                            <nav class="article-header__category article-header__category--deep">
                                <span class="article-header__category__upper"><a
                                            href="{$ gb.locales.urlPrefix $}/resource/search?contentType=tools">{$
                                        __('enums.cms.contentType.tool') $}</a></span>
                                <span class="article-header__category__lower">{$ (main.fields.meta.drupal.created or main.sys.createdAt) | formatDate(gb.locales.current) $}</span>
                            </nav>
                            <h1 class="rtl_{$ main.fields.title.isRtl $}">{$ main.fields.title.value $}</h1>
                            {% if main.fields.summary %}
                            <div class="article-header__intro rtl_{$ main.fields.summary.isRtl $}">
                                {$ main.fields.summary.value | renderMarkdown | sanitizeTrusted(gb.locales.urlPrefix) | addPortalClasses | safe $}
                            </div>
                            {% endif %}

                            <div class="article-header__button">
                                {% if main.fields.primaryLink %}
                                    <a href="{$ resolved.Entry[main.fields.primaryLink.sys.id].fields.url.value $}" class="gb-button--discreet small rtl_{$ resolved.Entry[main.fields.primaryLink.sys.id].fields.label.isRtl $}">{$ resolved.Entry[main.fields.primaryLink.sys.id].fields.label.value $}</a>
                                {% endif %}
                            </div>

                        </header>
                    </div>
                </div>
            </div>

            {% include "./toolMain.nunjucks" %}

        </article>
    </div>
    {% include "../preview.nunjucks" %}
{% endblock %}
