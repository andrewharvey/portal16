<div class="card m-b-05 searchCard rtl-supported">
    <div class="card__stripe">
        <div class="card__content">
            <span class="searchCard__type uppercase-first"> {{'enums.cms.contentType.dataUse' | translate }}</span>
            <h3 class="searchCard__headline">
                <a href="{{ portal.urlPrefix }}/data-use/{{result.id}}/{{result._slug}}" class="rtl_{{result.title.isRtl}}">
                    {{result.title.value}}
                </a>
            </h3>
        </div>
    </div>
    <div class="card__stripe">
        <div class="card__content searchCard__content clearfix">
            <a href="{{ portal.urlPrefix }}/data-use/{{result.id}}/{{result._slug}}">
                <img class="searchCard__img" ng-src="{$ _meta.imageCache $}128x64/{{ 'http:' + result.primaryImage.file.url | encodeURIComponent }}" ng-if="result.primaryImage.file.url">
            </a>
            <p class="rtl_{{result.body.isRtl}}">
                {{result.body.value}}
            </p>
            <p class="discreet--very smaller">
                <span translate="resource.published"></span> {{ result.createdAt | momentFormat:'LL'}}
            </p>
        </div>
    </div>
</div>