.fadeImages {
    img {
        filter grayscale(100%)
    }
}

.filter-location-map {
    height 300px
}

.filter-group--location {
    textarea {
        width 100%
        height 156px
        border none
        background transparent
    }
    &__input-types {
        padding 1rem 0
    }
}

.filter-group__filter__name__title.invalid {
    color tomato
}

.gb-radio {
    label {
        display inline-block
        padding-right 20px
        cursor pointer
        &:hover {
            .gb-radio__indicator {
                > span {
                    transform scale(0.5)
                    opacity .7
                }
            }
        }
    }
    &__indicator {
        height 15px
        width 15px
        display block
        float left
        margin 1px 10px 1px 0
        border 2px solid #777
        border-radius 50%
        transition all 0.2s ease-in-out
        >span {
            transition all 0.2s ease-in-out
            height 7px
            width 7px
            transform scale(0)
            display block
            margin 2px
            border-radius 50%
            background-color $linkColor
            opacity 0
        }
    }
    label.active {
        cursor initial
        .gb-radio__indicator {
            border-color $linkColor
            >span {
                transform scale(1)
                opacity 1
            }
        }
    }
}